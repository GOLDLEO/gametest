<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">

    <title>Hello, world!</title>
  </head>
  <body>
      <style>
          @import url('https://fonts.googleapis.com/css2?family=Nanum+Gothic+Coding:wght@400;700&display=swap');
          body{
              font-family: 'Nanum Gothic Coding', monospace;
              letter-spacing: 1px;
          }
          h1{
            font-weight: 600;
            font-size: 1.2em;
            letter-spacing: 2px;
            text-align: center;
            margin-top: 25vh;
            margin-bottom: 5vh;
          }
          form label{
            text-transform: uppercase;
            margin-bottom: 0.5rem;
            font-size: .9em;
            font-weight: 700;
          }
          .btn-danger{
              margin-bottom: 5vh;
          }
          h3{
              font-size: 1em;
              letter-spacing: 3px;
          }
      </style>
      <script>
            localStorage.setItem('pk', '<%= user.id  %>');
            localStorage.setItem('slug', '<%= user.slug  %>');
          
      </script>
      <h1>Hi, <%= user.username  %></h1>
      <div class="d-flex w-100 mx-auto">
        <a href="/playgame" class="btn btn-danger mx-auto">Play Game</a>
      </div>
      <% if (users.length > 0) { %>
    <div class="w-100 d-flex flex-column mx-auto">
        <h3 class="text-center">Another Players Scores</h3>
        <table class="table w-25 mx-auto text-center">
            <thead>
                <tr>
                    <!-- <th>#</th> -->
                    <th>Username</th>
                    <th>Scores</th>
                    <th>Date Register</th>
                </tr>
            </thead>
            <tbody>
                <% users.forEach( us => { %>
                    <tr>
                        <td><%= us.username %></td>
                        <td><%= us.totalScore %></td>
                        <td><%= us.createdAt.toLocaleDateString() %></td>
                    </tr>
                <% }) %>

            </tbody>
        </table>
    </div>

    <% } %>




    <!-- Optional JavaScript; choose one of the two! -->

    <!-- Option 1: Bootstrap Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>

    <!-- Option 2: Separate Popper and Bootstrap JS -->
